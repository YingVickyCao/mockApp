<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="2"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/newSession1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_session_1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/newSession2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_session_2"
                android:textAllCaps="false" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/clearSession1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_session_1"
                android:textAllCaps="false" />

            <Button
                android:id="@+id/clearSession2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_session_1"
                android:textAllCaps="false" />
        </LinearLayout>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>